{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "order",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "customer_id": {
      "type": "uid",
      "default": "CS_",
      "required": true
    },
    "order_number": {
      "type": "integer",
      "required": true
    },
    "order_key": {
      "type": "uid",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "complete"
      ],
      "default": "pending",
      "required": true
    },
    "discount_total": {
      "type": "decimal",
      "default": 0
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "billing": {
      "type": "component",
      "repeatable": false,
      "component": "customer.billing"
    },
    "shipping": {
      "type": "component",
      "repeatable": false,
      "component": "customer.billing",
      "required": true
    },
    "payment_method": {
      "type": "enumeration",
      "enum": [
        "bkash",
        "nagad",
        "credit card"
      ],
      "default": "credit card",
      "required": true
    },
    "transaction_id": {
      "type": "uid",
      "required": true
    },
    "date_paid": {
      "type": "datetime",
      "required": true
    },
    "date_completed": {
      "type": "datetime",
      "required": true
    },
    "product_items": {
      "displayName": "product",
      "type": "component",
      "repeatable": true,
      "component": "product.product"
    },
    "refurnds": {
      "displayName": "refunds",
      "type": "component",
      "repeatable": true,
      "component": "product.refunds"
    },
    "set_paid": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "profile": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::profile.profile",
      "inversedBy": "orders"
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "mappedBy": "orders"
    }
  }
}
